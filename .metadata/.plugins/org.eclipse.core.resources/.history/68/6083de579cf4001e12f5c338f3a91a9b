	@GetMapping(value="/getexecutionDetails")
	public PrimeNumResponse CalculatePrimeNumber(@RequestBody PrimeNumRequest prequest)
	{
		primeNum prnum=psrv.CalculatePrimeNumber(prequest);
	     PrimeNumResponse pResponse=new PrimeNumResponse();
		pResponse.setElapsedTime(prnum.getResponse().getElapsedTime());
		pResponse.setPrimes(prnum.getResponse().getPrimes());
		
		return pResponse;
	  
	}
	
}
