server.port=8082
spring.application.name=api-gateway
eureka.client.service-url.defaultZone=http://localhost:8081/eureka


#Automatic Rounting:-
  #enabled discovery feature
    spring.cloud.gateway.discovery.locator.enabled=true

  #mapping time madhe apiGateway map service name upper case madhe eureka server var display asel tar 
  #upper case madhe request accept krel means case sensitive ex USERs-WS ->used->users-ws
  #jar aplayala service name case sensitive nsel karaych tar below property add karav lagel
    spring.cloud.gateway.discovery.locator.lower-case-service-id=true
 
 
#manually Routing:-
  
    spring.cloud.gateway.routes[0].id=stuapi
  #lb-loadbalancer
    spring.cloud.gateway.routes[0].uri=lb://users-ws
 
  #  predicates:-it is similar to if else condition if client sent the request similar to following path and method then api gateway routes this client request  to USERS-WS service 
  spring.cloud.gateway.routes[0].predicates[0]=Path=/stuapi/status/check
 
  #whatever we write the method in this service i.e. post,put,delete,get  method , all this method we need to write in below code so that apiGatway route client request to services 
    spring.cloud.gateway.routes[0].predicates[1]=Method=GET ,POST,DELETE,UPDATE
    spring.cloud.gateway.routes[0].filters[0]=RemoveRequestHeader=Cookie
  
#Rewrite path
  #spring.cloud.gateway.routes[0].predicates[0]=Path=/users-ws/users/status/check  
  #spring.cloud.gateway.routes[0].filters[1]=RewritePath=/users-ws/(?<segement>.*) ,/$\{segement}
  
  